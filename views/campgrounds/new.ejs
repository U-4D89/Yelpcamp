<% layout('layouts/boilerplate') %> 
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card-shadow">
                <h1 class="card-title text-center">New campground</h1>

                <div class="card-body">
                    <form action="/campgrounds" class="row g-3 needs-validation" novalidate method="POST" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input class="form-control" type="text" id="title" name="campground[title]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
    
                            <div id="validationTitleFeedback" class="invalid-feedback">
                               * Please provide a valid title.
                            </div>
                        </div>
    
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input class="form-control" type="text" id="location" name="campground[location]" required >
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div id="validationLocationFeedback" class="invalid-feedback">
                               * Please provide a valid location.
                            </div>
                        </div>
                        
                      
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input class="form-control" type="text" id="description" name="campground[description]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
    
                            <div id="validationDescriptionFeedback" class="invalid-feedback">
                              *  Please provide a valid description.
                            </div>
                        </div>
    
                        <div class="input-group mb-3">
                            <label class="form-label" for="price">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="text" id="price" name="campground[price]"  class="form-control" placeholder="0.00" aria-label="Amount (to the nearest dollar)" >
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
        
                                <div id="validationDescriptionFeedback" class="invalid-feedback">
                                  *  Please provide a valid price.
                                </div>
                            </div>
                        </div>
    
                        <div class="mb-3">
                            <label for="image">Upload images</label>
                            <div class="form-file custom-file">
                                <input type="file"  class="form-file-input" name="image" id="image" multiple>
                                <!-- <label class="form-label" for="image">
                                    <span class="form-file-text custom-file-label"> Choose file . . .</span>
                                    <span class="form-file-button" >Browse</span>
                                </label> -->
                            </div>
                        </div>
    
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form>
    
                </div>
            </div>
          
        </div>
         
    </div>
    