<% layout('layouts/boilerplate') %> 
    <div class="row">
        <main>
            <h1 class="text-center">Editing campground</h1>
            <div class="col-6 offset-3">
                <!-- /campgrounds/61831923c29cb9256c41fc12/edit
                /campgrounds/<%=campground._id%>?_method=PUT" -->
                <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title <sup> *</sup></label>
                        <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>">
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="location">Location <sup> *</sup></label>
                        <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>">
                    </div>

       
                    <div class="mb-3">
                        <label class="form-label" for="price">Price <sup> *</sup></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" id="price" name="campground[price]"  class="form-control" placeholder="0.00" aria-label="Amount (to the nearest dollar)" value="<%= campground.price %>">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">Description <sup> *</sup></label>
                        <textarea class="form-control"  type="text" id="description" name="campground[description]"><%= campground.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image">Upload images</label>
                        <div class="form-file custom-file">
                            <input type="file"  class="form-file-input" name="image" id="image" multiple>
                        </div>
                    </div>

                    <div class="mb-3">
                        <% campground.images.forEach( function (img, i) { %>
                            <img src=" <%= img.thumbnail %> " alt="image for this campground" class="img-thumbnail">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>"  name="deleteImages[]" value="<%= img.filename %> ">
                            </div>
                            <label for="image-<%=i%>">Delete??</label>
                            <br>
                         <%  }) %> 
                    </div>
                
                    <div class="mb-3">
                        <button class="btn btn-success" >Update your campground!</button>
                    </div>
                    
                </form>

            </div>
        
        </main>

    </div>
